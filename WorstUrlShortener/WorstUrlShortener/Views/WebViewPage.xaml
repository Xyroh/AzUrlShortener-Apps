<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorstUrlShortener.Views.WebViewPage">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="5,50,5,25" Margin="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Frame Grid.Row="0" Grid.Column="0" Margin="0" Padding="5" BackgroundColor="{DynamicResource XyrohTeal}">
			<Frame.Content>
				<StackLayout Padding="5" Margin="5" BackgroundColor="{DynamicResource XyrohWhite}" Orientation="Vertical">

					<WebView x:Name="webView" VerticalOptions = "FillAndExpand"/>

					<ContentView Padding="5" VerticalOptions="End">
						<Button x:Name="popupButton" Text="Close Window" Font="Bold, 15" TextColor="{DynamicResource XyrohWhite}" BackgroundColor="{DynamicResource XyrohTeal}" />
					</ContentView>
				</StackLayout>
			</Frame.Content>
		</Frame>
	</Grid>
</ContentPage>
